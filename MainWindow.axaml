<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="800" Height="450"
        x:Class="StayBehindDemo.MainWindow"
        CanResize="False" ShowInTaskbar="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome" Loaded="Window_Loaded"
        ExtendClientAreaTitleBarHeightHint="-1"
        Background="Transparent"
        SystemDecorations="BorderOnly" WindowStartupLocation="Manual"
        Title="StayBehindDemo" Opened="Window_Opened">
    I'm behind every other window!
</Window>
